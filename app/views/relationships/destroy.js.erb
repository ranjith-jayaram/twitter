<% if @followed_type == "User" %>
	$("#follow_form").html("<%= escape_javascript(render('users/follow')) %>");
	$("#followers").html('<%= @user.followers.count %>');
<% elsif @followed_type == "Hashtag" %>
	$("#hashtag_follow_form").html("<%= escape_javascript(render('hashtags/follow')) %>");
	$("#followers").html('<%= @tag.followers.count %>');
<% elsif @followed_type == "Micropost" %>
	$('#save_form_<%= "#{@micropost.id}" %>').html("<%= escape_javascript(render('microposts/save', micropost: @micropost)) %>");
	$("#Saved").html('<%= @user.following_microposts.count %>');
<% end %>

