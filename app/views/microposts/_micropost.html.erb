<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= display_micropost(micropost) %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.|
    <% if current_user.following_micropost?(@micropost) %>
    <%= form_for(current_user.active_relationships.find_by(followed_id: micropost.id, followed_type: "Micropost"),html: { method: :delete },remote: true) do |f| %>
      <%= hidden_field_tag :followed_type, "Micropost" %>
      <%= f.submit "unsave", class: "btn" %>
    <% end %>
    <% else %>
    <%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
      <div><%= hidden_field_tag :followed_id, micropost.id %>
      <%= hidden_field_tag :followed_type, "Micropost" %></div>
       <%= f.submit "save", class: "btn btn-primary" %>
    <% end %> 
    <% end %>
    <% if current_user?(micropost.user) %>
      |<%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li> 