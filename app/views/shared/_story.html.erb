<div class="container">
  <!-- Trigger the modal with a button -->
  <% if @story_items.any? %>
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">View Status</button>
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content trans">
        <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
          <div class="container">
            <div id="myCarousel" class="carousel slide story-image" data-ride="carousel">


              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <% @story_items.each_with_index do |story, i| %>
                  <div class='item <%= i==0 ? "active" : "" %>'>
                  <div class ="story-dialog"><%= image_tag story.image.url, width: '100%' %></div>
                    <div class="carousel-caption">
                    <div><%= story.user.name %></div> <br/> 
                    <%= story.content %></div>
                  </div>
                <% end %>
              </div>

              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
      </div>
      
    </div>
  </div>
<%else%>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" disabled=true>View Status</button>
<%end%>  
</div>