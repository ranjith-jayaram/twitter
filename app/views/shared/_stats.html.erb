<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <a href="<%= followingtags_user_path(@user) %>">
      <strong id="Hashtags" class="stat">
      <%= @user.following_hashtags.count %>
    </strong>
    hashtags
  </a>
  <% if current_user?(@user) %>
  <a href="<%= followingmicroposts_user_path(@user) %>">
  <strong id="Microposts" class="stat">
      <%= @user.following_microposts.count %>
    </strong>
    Saved
    </a>
    <% end %>
</div>